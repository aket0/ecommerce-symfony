{% extends 'base.html.twig' %}

{% block title %}{% include 'header.html.twig' %}Log in!{% endblock %}

{% block body %} 
<div class="container-fluid container-form p-5 h-100">
    <form method="post" class="col-md-4 mx-auto ">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <div class="col-5 mx-auto ">
            <h1 class="h3 mb-3 font-weight-normal text-center ">Login or <a href="{{ path('app_register') }}">register here</a></h1>
        </div>
        <div class="d-flex column col-12">    
            <div class="col-12 mb-3">
                 <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Enter your email" required autofocus >
            </div>
            <div class="col-12 mb-3">
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Enter your password" required>
            </div>
            
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            <button class="btn btn-lg btn-primary col-12" type="submit">
                Sign in
            </button>
        </div>
    </form>
</div>
{% block footer %}
{% include "footer.html.twig" %}
{% endblock %}
{% endblock %}
