{% extends 'base.html.twig' %}

{% block title %}Categorie index
{% endblock %}

{% block body %}
	<h1>Categories</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Libelle</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for categorie in categories %}
				<tr>
					<td>{{ categorie.id }}</td>
					<td>{{ categorie.libelle }}</td>
					<td>
						<a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">Consulter</a>
						|
						<a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Pas de Categories existantes</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_categorie_new') }}">Create new</a>
{% endblock %}
